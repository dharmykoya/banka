{
  "name": "banka",
  "version": "1.0.0",
  "description": "A simple banking app",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec babel-node index.js",
    "start-dev": "nodemon --exec babel-node index.js",
    "test": "mocha **/*.spec.js --require @babel/register --timeout 50000 --exit --watch",
    "test-watch": "nodemon --exec \"npm test\"",
    "test:travis": "mocha test/ --require @babel/register --exit",
    "test:trav": "mocha **/*.spec.js --require @babel/register --exit",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "nyc npm run test-db && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage",
    "babel-build": "babel controllers data middleware models routes services test validators index.js -d dist",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && npm run babel-build",
    "migrate": "babel-node models/runMigration",
    "unmigrate": "babel-node models/dropTableMigrations",
    "migrations": "npm run unmigrate && npm run migrate",
    "test-db": "npm run migrations && npm run test:travis"
  },
  "author": "Damilola Adekoya",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "@sendgrid/mail": "^6.3.1",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "multer": "^1.4.1",
    "pg": "^7.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dharmykoya/banka.git"
  },
  "keywords": [
    "Banka",
    "Andela",
    "JWT",
    "Data Structures",
    "Es6",
    "Authentication",
    "Single Repository Pattern"
  ],
  "bugs": {
    "url": "https://github.com/dharmykoya/banka/issues"
  },
  "homepage": "https://github.com/dharmykoya/banka",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4"
  }
}
